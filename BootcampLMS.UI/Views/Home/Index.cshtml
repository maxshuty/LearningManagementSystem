
@{
    ViewBag.Title = "Home Page";
}

<h2 align="center">Bootcamp Learning Management System (LMS)</h2>
<div class="form-group">
    <div class="col-xs-6">
        <div class="row">
            <h3>Existing Users Log In Here</h3>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Remember me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-xs-6">
        <div class="row">
            <h3>New User? Register Now!</h3>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="firstNameInput" class="col-sm-2 control-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="firstNameInput" placeholder="First Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="lastNameInput" class="col-sm-2 control-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="lastNameInput" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="passwordConfirmation" class="col-sm-2 control-label">Confirm Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="passwordConfirmation" placeholder="Confirm Password">
                    </div>
                </div>
                <label for="parentStudentSelector" class="col-sm-2 control-label">I am a:</label>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="parentStudentSelector" data-toggle="dropdown" aria-expanded="true">
                        Please Select
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="parentStudentSelector">
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Parent</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Student</a></li>
                    </ul>
                </div>
                <label for="gradeSelector" class="col-sm-2 control-label">Grade Level</label>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="gradeSelector" data-toggle="dropdown" aria-expanded="true">
                        N/A
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="gradeSelector">
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Preschool</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Kindergarten</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">1st grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">2nd grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">3rd grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">4th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">5th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">6th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">7th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">8th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">9th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">10th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">11th grade</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">12th grade</a></li>
                    </ul>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
